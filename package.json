{
    "name": "rsn-schema-highlighter",
    
    "publisher": "KarimKeshta",
    "version": "1.0.0",
    "license": "MIT",
    
    "displayName": "DBcoach — Formaler Syntax für Relationalen Entwurf",
    "description": "Highlighting the Syntax of \"Formaler Syntax\" from DBcoach",
    "categories": ["Education"],
    "keywords": [
        "DBcoach",
        "Formaler Syntax",
        "Hochschule Kaiserslautern" 
    ],
    
    "repository": {
        "type": "git",
        "url": "https://github.com/KarimKeshta/rsn-schema-highlighter",
        "icon": "icon.png"
    },
    
    "engines": {
        "vscode": "^1.80.0"
    },

    "contributes": {
        "languages": [
            {
                "id": "rsn",
                "aliases": ["Relational Schema Notation", "rsn"],
                "extensions": [".rsn"],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "rsn",
                "scopeName": "source.rsn",
                "path": "./syntaxes/rsn.tmLanguage.json"
            }
        ],
        "configurationDefaults": {
            "editor.bracketPairColorization.enabled": false,
            "editor.tokenColorCustomizations": {
                "textMateRules": [
                    {
                        "scope": "rsn.comment",
                        "settings": {
                            "foreground": "#606060",
                            "fontStyle": "italic"
                        }
                    },
                    {
                        "name": "Green",
                        "scope": "rsn.tablename",
                        "settings": {
                            "foreground": "#C3E88D",
                            "fontStyle": "bold"
                        }
                    },
                    {
                        "name": "Light Blue",
                        "scope": [
                            "rsn.key.foreign",
                            "rsn.relationship.source"
                        ],
                        "settings": {
                            "foreground": "#89DDFF",
                            "fontStyle": "italic"
                        }
                    },
                    {
                        "name": "Purple Underlined",
                        "scope": "rsn.key.primary",
                        "settings": {
                            "foreground": "#C792EA",
                            "fontStyle": "bold underline"
                        }
                    },
                    {
                        "name": "Purple",
                        "scope": "rsn.relationship.target",
                        "settings": {
                            "foreground": "#C792EA",
                            "fontStyle": "italic"
                        }
                    },
                    {
                        "name": "Magenta",
                        "scope": "rsn.key.candidate",
                        "settings": {
                            "foreground": "#FF66AA"
                        }
                    },
                    {
                        "name": "Blue",
                        "scope": [
                            "rsn.syntax.operator",
                            "rsn.syntax.relationship",
                            "rsn.syntax.keyword"
                        ],
                        "settings": {
                            "foreground": "#82AAFF"
                        }
                    },
                    {
                        "name": "Orange",
                        "scope": [
                            "rsn.syntax.number",
                            "rsn.syntax.candidate"
                        ],
                        "settings": {
                            "foreground": "#F78C6C"
                        }
                    },
                    {
                        "name": "Yellow",
                        "scope": [
                            "rsn.syntax.bracket",
                            "rsn.syntax.separator"
                        ],
                        "settings": {
                            "foreground": "#ffd900"
                        }
                    },
                    {
                        "name": "White",
                        "scope": "rsn.text",
                        "settings": {
                            "foreground": "#EEFFFF"
                        }
                    },
                    {
                        "name": "Invisible",
                        "scope": "rsn.invisible",
                        "settings": {
                            "foreground": "#00000000"
                        }
                    }
                ]
            }
        }
    }
}