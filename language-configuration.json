{
    "comments": {
        "lineComment": {
            "comment": "#",
            "noIndent": false
        },
        "blockComment": []
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" }
    ],
    "indentationRules": {
        // Erhöht die Einrückung nach einer öffnenden Klammer, 
        // sofern keine schließende Klammer folgt.
        "increaseIndentPattern": "\\s*\\([^\\)]*$", 
        // Verringert die Einrückung vor einer schließenden Klammer oder eckigen Klammer.
        "decreaseIndentPattern": "^\\s*(\\)|\\})"
    }
}